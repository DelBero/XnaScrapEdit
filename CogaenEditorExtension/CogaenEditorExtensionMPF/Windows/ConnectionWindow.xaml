<Window x:Class="CogaenEditExtension.ConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connect" Height="100" Width="300"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow" Topmost="True" Closing="Window_Closing">
    <StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Label Content="Server" HorizontalAlignment="Left"  Name="label1" />
            <TextBox Height="23" HorizontalAlignment="Left" Name="textBoxIp" VerticalAlignment="Top" Width="178" Text="127.0.0.1" TextAlignment="Center" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Connect" Height="23" HorizontalAlignment="Left"  Name="buttonOk" VerticalAlignment="Top" Width="75" Click="buttonOk_Click" IsDefault="True" />
            <Button Content="Cancel" Height="23" HorizontalAlignment="Left"  Name="buttonCancel" IsCancel="True" VerticalAlignment="Top" Width="75" Click="buttonCancel_Click" />
        </StackPanel>
    </StackPanel>
</Window>
